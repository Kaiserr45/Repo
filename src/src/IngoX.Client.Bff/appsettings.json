{
  // Общие атрибуты приложения
  "IngosApplication": {
    "PathPrefix": "api",
    "ServiceGroup": "ingox",
    "ServiceType": "ingox-client-bff",

    "Title": "IngoX.Client.Bff",
    "Description": "Микросервис поиска клиента IngoX",

    "BusinessOwners": "Соловьёв Владимир Николаевич (ДИТ) <vladimir.solovjov@ingos.ru>",
    "Authors": "Соловьёв Владимир Николаевич (ДИТ) <vladimir.solovjov@ingos.ru>", // Основные разработчики

    "ApiVersion": "v1",
    "ReleaseId": "1.0.0", // Сейчас не важно, проставляется автоматически
    "Profile": "prod", // Один из вариантов: dev, test, stage, prod
    "InstanceId": "dev1"
  },

  // Стандартные настройки публикации сервиса (Endpoints / HttpsInlineCertFile / HttpsDefaultCert / Certificates)
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:9001" // Адрес сервиса. "0.0.0.0" вместо "localhost" - для запуска и в Linux
      }
    }
  },

  // Настройки тестового rest-коннектора (для примера обращаемся к /hc текущего сервиса)
  "TestRestConnectorSettings": {
    "Url": "http://localhost:9001"
  },

  // Настройки вывода спецификации API (swagger)
  "IngosApiSpecification": {
    "Enabled": true,
    "HasPrefix": true
  },

  // Настройки платформы Ingos API
  "IngosApiSettings": {
    "Cors": [
      "https://www.ingogate.ru",
      "https://*.ingogate.ru"
    ]
  },

  "IndividualClientApi": {
    "BaseUrl": "https://int-gate.corp.ingos.ru/api/ingox-mdm/v1"
  },

  // Настройки логирования
  "IngosLogging": {
    "LogLevel": {
      "Default": "Info",
      "Microsoft": "Warn",
      "System": "Warn"
    },
    "LogConsoleTarget": {
      "MinLogLevel": "Info",
      "Enabled": true,
      "Mode": "Json"
    },
    "LogParams": {
      "EventType": "App"
    }
  },

  // Настройки мониторинга
  "IngosHealthCheck": {
    "Enabled": true
  },

  "DistributedCacheHealthCheck": {
    "Enabled": true,
    "RefreshInterval": 30000,
    "ExpirationThreshold": 10
  },

  "AisGateHealthCheck": {
    "Enabled": true,
    "RefreshInterval": 30000,
    "ExpirationThreshold": 10
  },

  // Настройки распределенного кэширования
  "IngosRedisOptions": {
    "EndPoints": "msvo-redis01.corp.ingos.ru:6379, msln-redis01.corp.ingos.ru:6379",
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "CommandRetryCount": 2,
    "CommandRetryDelay": 200
  },

  "IngosCaptcha": {
    "Enabled": true,
    "BaseUrl": "http://int-gate.corp.ingos.ru"
  },

  "AisGate": {
    "AppName": "APPWEBSITE",
    "AppVersion": "WWWINGOS20",
    "EndPoints": "https://aisgate-prod.msk.ingos.ru/igsSvcGate.svc, https://aisgate-prod.msk.ingos.ru:9443/igsSvcGate.svc",
    "ConfigUpdateInterval": 7200000,
    "HealthCheckInterval": 10000,
    "TraceTimeout": 10000,
    "OperationTimeout": 60000,
    "AisSessionRequestHeaderEnabled": true,
    "AuthorizationHttpHeaderEnabled": false,
    "EndPointBinding": {
      "Name": "BasicHttpBinding_IAisGate",
      "MaxBufferSize": 2147483647,
      "MaxBufferPoolSize": 524288,
      "MaxReceivedMessageSize": 2147483647,
      "TextEncoding": "Encoding.UTF8",
      "TransferMode": "Buffered",
      "UseDefaultWebProxy": true,
      "ReaderQuotas": {
        "MaxDepth": 32,
        "MaxStringContentLength": 8192,
        "MaxArrayLength": 16384,
        "MaxBytesPerRead": 4096,
        "MaxNameTableCharCount": 16384
      },
      "security": {
        "mode": "Transport",
        "transport": {
          "clientCredentialType": "None",
          "proxyCredentialType": "None"
        }
      }
    },
    "LogOptions": {
      // "IsTraceEnabled": false, не обязательно
      "RequestCharLimit": 12000,
      "ResponseCharLimit": 12000
    }
  },

  "IngosAuthorization": {
    "Validation": {
      "Issuer": "https://sso.ingos.ru",
      "ClockSkewMinutes": 1,
      "AutomaticRefreshIntervalHours": 6,
      "RetryIntervalSeconds": 60
    },
    "Swagger": {
      "AuthClientId": "igsloyaltyp"
    },
    "Schemes": {
      "Bearer": {
        "Default": true,
        "DisplayName": "Authorization for Clients"
      },
      "Service": {
        "DisplayName": "Authorization for Services"
      },
      "ApiKey": {
        "Default": false,
        "DisplayName": "Authorization for ApiKey",
        "PoliciesScopesRequired": false,
        "PoliciesUserGroupsRequired": false,
        "AuthorizationType": "ApiKey"
      }
    },
    "Policies": {
      "Bearer": {
        "Default": true,
        "SchemeNames": [ "Bearer" ],
        "UserGroups": [ 106 ],
        "AuthorizedParties": [ "igswebsitep", "igsloyaltyp", "igsagentp" ]
      },
      "Service": {
        "SchemeNames": [ "Service" ],
        "UserGroups": [ 63903 ]
      },
      "ApiKey": {
        "Default": false,
        "SchemeNames": [ "ApiKey" ]
      }
    }
  },

  "Vault": {
    "IsActive": true,
    "Address": "https://secret.corp.ingos.ru:8200/",
    "MountPath": "ingosapp",
    "Path": "ingos.services/prod", // Путь в Vault до приложения и его среда (test / stage / prod)
    "AutoMapping": [
      {
        "VaultMask": null,
        "VaultKey": "redis_password",
        "ConfigKey": "IngosRedisOptions:Password"
      }
    ]
  }
}